{
  "name": "discord-llm-bot",
  "version": "1.0.0",
  "description": "Discord bot with Gemini AI integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:load": "jest tests/load --runInBand",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:phase3": "jest tests/unit/services/(healthMonitor|gracefulDegradation|configurationManager|userPreferenceManager|analyticsManager)",
    "test:chaos": "jest tests/chaos --config=tests/chaos/jest.config.chaos.js --runInBand",
    "test:chaos:basic": "jest tests/chaos/ChaosFramework.test.ts --config=tests/chaos/jest.config.chaos.js",
    "test:chaos:scenarios": "jest tests/chaos/scenarios --config=tests/chaos/jest.config.chaos.js --runInBand",
    "test:chaos:validation": "jest tests/chaos/ValidationTests.ts --config=tests/chaos/jest.config.chaos.js --runInBand",
    "test:resilience": "jest tests/resilience --config=tests/chaos/jest.config.chaos.js --runInBand",
    "test:load-with-errors": "jest tests/load --config=tests/chaos/jest.config.chaos.js --runInBand",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "benchmark": "ts-node tests/benchmarks/runner.ts run",
    "benchmark:context": "ts-node tests/benchmarks/runner.ts run --suites context",
    "benchmark:splitter": "ts-node tests/benchmarks/runner.ts run --suites splitter",
    "benchmark:ratelimiter": "ts-node tests/benchmarks/runner.ts run --suites ratelimiter",
    "benchmark:roast": "ts-node tests/benchmarks/runner.ts run --suites roast",
    "benchmark:all": "ts-node tests/benchmarks/runner.ts run --suites context,splitter,ratelimiter,roast",
    "benchmark:list": "ts-node tests/benchmarks/runner.ts list",
    "benchmark:baseline": "ts-node tests/benchmarks/runner.ts run --format json --output ./baseline-results.json",
    "benchmark:compare": "ts-node tests/benchmarks/runner.ts run --format json --output ./current-results.json && echo 'Compare baseline-results.json with current-results.json'",
    "pre-optimization": "npm run benchmark:baseline",
    "post-optimization": "npm run benchmark:compare",
    "ci:performance": "npm run benchmark && npm run benchmark:validate || echo 'Performance validation not yet implemented'",
    "ci:test": "npm run lint && npm run test:ci",
    "ci:full": "npm run lint && npm run test:ci && npm run benchmark",
    "test:performance": "jest tests/performance/benchmarks.test.ts --runInBand",
    "test:regression": "jest tests/performance/regression.test.ts --runInBand",
    "test:performance:update-baseline": "UPDATE_BASELINE=true jest tests/performance/regression.test.ts --runInBand",
    "load-test": "ts-node scripts/loadTest.ts run",
    "load-test:quick": "ts-node scripts/loadTest.ts quick",
    "performance:dashboard": "ts-node -e \"import { performanceDashboard } from './src/monitoring/performanceDashboard'; performanceDashboard.start(); console.log('Dashboard started. Press Ctrl+C to stop.'); process.on('SIGINT', () => { performanceDashboard.stop(); process.exit(0); });\""
  },
  "dependencies": {
    "@google/genai": "^1.31.0",
    "@types/uuid": "^10.0.0",
    "ajv": "^8.17.1",
    "async-mutex": "^0.5.0",
    "better-sqlite3": "^11.10.0",
    "chokidar": "^4.0.3",
    "crypto-js": "^4.2.0",
    "discord.js": "^14.25.1",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.3.2",
    "uuid": "^11.1.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/crypto-js": "^4.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "commander": "^11.1.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
