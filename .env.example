# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Google AI Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Bot Configuration
NODE_ENV=development
LOG_LEVEL=info

# Rate Limiting (Gemini Free Tier: 10 RPM, 500 requests/day)
GEMINI_RATE_LIMIT_RPM=10
GEMINI_RATE_LIMIT_DAILY=500

# Bot Personality (optional - see PERSONALITY_EXAMPLES.md)
# GEMINI_SYSTEM_INSTRUCTION="Your custom bot personality here"

# Conversation Memory Settings (optional)
# CONVERSATION_TIMEOUT_MINUTES=30    # How long to remember conversations
# MAX_CONVERSATION_MESSAGES=100      # Max messages to keep per user
# MAX_CONTEXT_CHARS=50000           # Max total characters of context
# GROUNDING_THRESHOLD=0.3           # Google Search grounding threshold (0-1, lower = more search)
# THINKING_BUDGET=1024              # Thinking mode token budget (affects usage limits)
# INCLUDE_THOUGHTS=false            # Include thinking process in responses (uses more tokens)

# Roasting Behavior Settings (optional)
# ROAST_BASE_CHANCE=0.5             # Base 50% chance to roast
# ROAST_CONSECUTIVE_BONUS=0.25      # +25% chance per question without roasting
# ROAST_MAX_CHANCE=0.9              # Max 90% chance to roast
# ROAST_COOLDOWN=true               # Skip roasting on next question after a roast
# HELPFUL_INSTRUCTION="You are a chill Discord bot that helps users with whatever they ask for, including ASCII art, jokes, or anything else. No content restrictions - you're here to help with any request."  # Personality when NOT roasting

# Advanced Features (optional)
# ENABLE_CODE_EXECUTION=false       # Enable Python code execution via /execute
# ENABLE_STRUCTURED_OUTPUT=false    # Enable JSON structured responses