# ================================
# REQUIRED - Bot won't start without these
# ================================
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
GOOGLE_API_KEY=your_google_api_key_here

# ================================
# BASIC CONFIGURATION
# ================================
NODE_ENV=development
LOG_LEVEL=info

# Rate Limiting (Gemini Free Tier: 15 RPM, 1500 requests/day)
RATE_LIMIT_RPM=15
RATE_LIMIT_DAILY=1500

# ================================
# NEW: IMAGE RECOGNITION SETTINGS
# ================================
# Improves accuracy for character/person identification in images
# Options: HIGH_ACCURACY_VISION, BALANCED_VISION, FAST_VISION, CREATIVE_VISION, LEGACY
GEMINI_VISION_PROFILE=HIGH_ACCURACY_VISION

# ================================
# OPTIONAL: ADVANCED SETTINGS
# ================================

# Bot Personality (see PERSONALITY_EXAMPLES.md for examples)
# GEMINI_ROASTING_INSTRUCTION="Your custom roasting personality here"
# GEMINI_HELPFUL_INSTRUCTION="Your custom helpful personality here"

# AI Model Parameters (fine-tuning response style)
# GEMINI_TEMPERATURE=0.9           # Creativity: 0.1=focused, 0.9=creative
# GEMINI_TOP_K=40                  # Token selection diversity
# GEMINI_TOP_P=0.95                # Response variety control

# Conversation Memory Settings
# CONTEXT_TIMEOUT_MINUTES=60       # How long to remember conversations
# CONTEXT_MAX_MESSAGES=100         # Max messages to keep per user
# CONTEXT_MAX_CHARS=75000          # Max total characters of context

# Roasting Behavior (the bot's sassy personality)
# ROAST_BASE_CHANCE=0.3            # Base 30% chance to roast
# ROAST_MAX_CHANCE=0.8             # Maximum 80% roast chance

# Advanced AI Features (experimental - uses more tokens)
# GEMINI_ENABLE_GOOGLE_SEARCH=false       # Web search for current info
# GEMINI_GOOGLE_SEARCH_THRESHOLD=0.3      # Search confidence threshold (0.0-1.0)
# GEMINI_THINKING_BUDGET=20000            # Thinking mode token budget
# GEMINI_INCLUDE_THOUGHTS=false           # Show AI reasoning process
# GEMINI_ENABLE_CODE_EXECUTION=false      # Python code execution
# GEMINI_ENABLE_STRUCTURED_OUTPUT=false   # JSON structured responses

# Content Filtering
# UNFILTERED_MODE=false                   # Enable completely unfiltered responses (use responsibly)

# Performance & Caching
# CACHE_MAX_SIZE=1000              # Max cached responses
# CACHE_TTL_MINUTES=5              # Cache expiration time

# Monitoring & Health
# HEALTH_CHECK_INTERVAL_MS=30000   # Health check frequency
# METRICS_RETENTION_HOURS=24       # Metrics storage duration

# Video Processing (Experimental - uses significant tokens)
# VIDEO_SUPPORT_ENABLED=false             # Enable video processing
# MAX_VIDEO_DURATION_SECONDS=83           # Max 83 seconds (25k tokens)
# VIDEO_TOKEN_WARNING_THRESHOLD=25000     # Token warning threshold
# YOUTUBE_URL_SUPPORT_ENABLED=true        # Process YouTube URLs
# VIDEO_FILE_SIZE_LIMIT_MB=20             # Max video file size
# REQUIRE_VIDEO_CONFIRMATION=false        # Auto-process without confirmation

# ================================
# QUICK SETUP EXAMPLES
# ================================

# Example 1: Maximum Accuracy (slower, more accurate)
# GEMINI_VISION_PROFILE=HIGH_ACCURACY_VISION
# GEMINI_TEMPERATURE=0.3
# CONTEXT_MAX_CHARS=100000

# Example 2: Fast & Fun (quicker responses, more creative)
# GEMINI_VISION_PROFILE=FAST_VISION
# GEMINI_TEMPERATURE=0.9
# ROAST_BASE_CHANCE=0.6

# Example 3: Low Resource Usage (minimal memory/token usage)
# GEMINI_VISION_PROFILE=FAST_VISION
# CONTEXT_MAX_CHARS=25000
# CACHE_MAX_SIZE=100

# ================================
# For complete documentation, see: ENV_CONFIGURATION_GUIDE.md
# ================================